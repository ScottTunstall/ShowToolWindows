<UserControl x:Class="ShowToolWindows.UI.ToolWindows.ToggleToolWindowsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vs="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <UserControl.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}" />
    </UserControl.InputBindings>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*" MinHeight="80" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="120" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Check tool windows to select them for stashing." 
                   Foreground="{DynamicResource {x:Static vs:EnvironmentColors.ToolWindowTextBrushKey}}"
                   VerticalAlignment="Center" />

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="Refresh (F5)"
                    Width="90"
                    IsEnabled="{Binding IsInitialised}"
                    Click="RefreshButton_Click" />
            <Button Content="Stash Checked"
                    Padding="8,2"
                    Margin="8,0,0,0"
                    IsEnabled="{Binding CanStashSelected}"
                    Click="StashButton_Click" />
        </StackPanel>

        <ListBox Grid.Row="4"
                 x:Name="ToolWindowsListBox"
                 ItemsSource="{Binding ToolWindows}"
                 IsEnabled="{Binding IsInitialised}"
                 BorderThickness="0"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.InputBindings>
                <KeyBinding Key="A" Modifiers="Control" Command="{Binding CheckAllCommand}" />
            </ListBox.InputBindings>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Caption}"
                              IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Margin="0,2" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- GridSplitter for resizing -->
        <GridSplitter Grid.Row="5"
                      Height="5"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Background="{DynamicResource {x:Static vs:EnvironmentColors.ToolWindowBorderBrushKey}}"
                      ShowsPreview="False" />

        <!-- Stashes UI section -->
        <Expander Grid.Row="6"
                  Header="{Binding StashesHeader}"
                  IsExpanded="True"
                  Foreground="{DynamicResource {x:Static vs:EnvironmentColors.ToolWindowTextBrushKey}}">
            <Grid Margin="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button Content="Pop (Abs)"
                            Width="80"
                            IsEnabled="{Binding CanMutateStash}"
                            Click="PopAbsoluteButton_Click" />
                    <Button Content="Pop (Merge)"
                            Width="90"
                            Margin="8,0,0,0"
                            IsEnabled="{Binding CanMutateStash}"
                            Click="PopMergeButton_Click" />
                    <Button Content="Drop All"
                            Width="80"
                            Margin="8,0,0,0"
                            IsEnabled="{Binding CanMutateStash}"
                            Click="DropAllButton_Click" />
                </StackPanel>

                <ListBox Grid.Row="2"
                         x:Name="StashListBox"
                         ItemsSource="{Binding Stashes}"
                         IsEnabled="{Binding IsInitialised}"
                         BorderThickness="1"
                         BorderBrush="{DynamicResource {x:Static vs:EnvironmentColors.ToolWindowBorderBrushKey}}"
                         MouseDoubleClick="StashListBox_MouseDoubleClick"
                         PreviewMouseRightButtonDown="StashListBox_PreviewMouseRightButtonDown"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Apply (Absolute)" Click="ApplyStashAbsolute_Click" />
                            <MenuItem Header="Apply (Merge)" Click="ApplyStashMerge_Click" />
                            <Separator />
                            <MenuItem Header="Drop" InputGestureText="Del" Click="DropStash_Click" />
                        </ContextMenu>
                    </ListBox.ContextMenu>
                    <ListBox.InputBindings>
                        <KeyBinding Key="Delete" Command="{Binding DropStashCommand}" />
                    </ListBox.InputBindings>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       Margin="2"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Expander>
    </Grid>
</UserControl>

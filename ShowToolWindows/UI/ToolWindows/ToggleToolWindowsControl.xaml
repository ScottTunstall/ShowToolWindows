<UserControl x:Class="ShowToolWindows.UI.ToolWindows.ToggleToolWindowsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vs="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <UserControl.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}" />
    </UserControl.InputBindings>
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Toggle tool windows to show or hide them." 
                   Foreground="{DynamicResource {x:Static vs:EnvironmentColors.ToolWindowTextBrushKey}}"
                   VerticalAlignment="Center" />

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="Refresh (F5)"
                    Width="90"
                    Click="RefreshButton_Click" />
            <Button Content="Show All"
                    Width="80"
                    Margin="8,0,0,0"
                    Click="ShowAllButton_Click" />
            <Button Content="Hide All"
                    Width="80"
                    Margin="8,0,0,0"
                    Click="HideAllButton_Click" />
            <Button Content="Stash Selected"
                    Padding="8,2"
                    Margin="8,0,0,0"
                    Click="StashButton_Click" />
        </StackPanel>

        <ListBox Grid.Row="4"
                 ItemsSource="{Binding ToolWindows}"
                 BorderThickness="0"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Caption}"
                              IsChecked="{Binding IsVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Checked="WindowCheckbox_Checked"
                              Unchecked="WindowCheckbox_Unchecked"
                              Margin="0,2" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Stashes UI section -->
        <Expander Grid.Row="6"
                  Header="{Binding StashesHeader}"
                  IsExpanded="True"
                  Foreground="{DynamicResource {x:Static vs:EnvironmentColors.ToolWindowTextBrushKey}}">
            <Grid Margin="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="150" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button Content="Pop"
                            Width="80"
                            Click="PopButton_Click" />
                </StackPanel>

                <ListBox Grid.Row="2"
                         x:Name="StashListBox"
                         ItemsSource="{Binding Stashes}"
                         BorderThickness="1"
                         BorderBrush="{DynamicResource {x:Static vs:EnvironmentColors.ToolWindowBorderBrushKey}}"
                         MouseDoubleClick="StashListBox_MouseDoubleClick"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       Margin="2"
                                       TextTrimming="CharacterEllipsis"
                                       ToolTip="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Expander>
    </Grid>
</UserControl>
